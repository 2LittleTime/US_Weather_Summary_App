@using TemplateFull.Models;
@using TemplateFull.Models.Interfaces;
<link href="~/Content/jchartfx.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/jchartfx.system.js"></script>
<script type="text/javascript" src="~/Scripts/jchartfx.coreBasic.js"></script>
<script type="text/javascript" src="~/Scripts/SummaryCharts/SummaryCharts.js"></script>

@{
    ViewBag.Title = "Weather Summary Charts";
}

<h2>Summary Charts</h2>

<div id="content"> <a id="maincontent"></a>
<div id="content-container">

@{
    IWeatherSummaryFilter wsf = new WeatherSummaryFilter();
    Html.RenderPartial("RequestFormCharts", wsf);
    }

<button id="btnRequest" onclick="getData()">Create Charts</button>
<br />



<br />

<table class="table" border="1" cellspacing="0" style="width: 30%">
